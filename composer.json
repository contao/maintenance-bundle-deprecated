    "homepage": "https://github.com/contao/maintenance-bundle-deprecated",
    "license": "MIT",
    "authors": [
        {
            "name": "Gilles Gauthier",
            "email": "g.gauthier@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        },
        {
            "name": "Djuri Baars",
            "email" : "info@djurict.nl"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "symfony/console": "^4.0|^5.0",
        "symfony/contracts": "^2.0",
        "symfony/framework-bundle": "^4.0|^5.0",
        "symfony/translation": "^4.0|^5.0"
    },
    "replace": {
        "lexik/maintenance-bundle": "2.1.99"
